import socket
import time 

s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
s.connect(('localhost', 6969))

msg=s.recv(30)
print (msg.decode('utf-8'))

s.send(bytes("TIME", "utf-8"))
msg = s.recv(30)
print (msg.decode('utf-8'))

time.sleep(20) # wait 20 seconds so a timeout occurs (uncomment to test timeout)
s.send(bytes("HELLO", "utf-8"))
msg = s.recv(30)
print (msg.decode('utf-8'))

s.send(bytes("EXIT", "utf-8"))

s.close()

