#include<stdio.h>

int main (void){
    int std;
    int L = 0, M = 0 , R = 0 , S = 0 , a, b = 0 , c , v = 0 , Hash, t;
    printf("Please enter your Student ID (9 digits): \n");
    scanf("%d",&std);
    t = std;
    
    while (std != 0) {
    int Q = 0, m = 0 , n =0 , p = 0 ,e , f ,g;
    a = std % 1000;
    while (a != 0){
    int x ;
    x = a % 10;
    Q += x ;
    a = a /10;
    }
    
    if (Q > 9){
    while(Q != 0){
      e = Q % 10;
      m += e;
      Q = Q / 10;
    }
       Q = m;
       
    }
     if (Q > 9 ){
        while (Q != 0){ 
        f = Q % 10;
        n += f;
        Q = Q/10;
        }
        Q = n;
     

     }
     if (Q > 9){
         while (Q != 0){
             g = Q % 10;
             p += g;
             Q = Q/10;
         }
         Q = p;
      

     }
     b += 1;
    if(b == 1){
        R = Q;
    }
    else if (b == 2){
        M = Q;
    }
    else if (b ==3){
        L = Q; 
    }
    std = std / 1000;

    
    }
    

    S += L + M + R;
    if (S > 9){
        while (S != 0){
        c = S % 10;
        v += c;
        S = S/10;
    }
    S = v;
    }
    printf("M: %d, S: %d, L: %d, R: %d\n", M, S, L, R);
    Hash  =  M *  1000  +  S  *  100  +  L  *  10  +  R;
    printf("The hash value of your ID(%d) is %d \n",t,Hash);

}
