echo Enter the name of the file:

read filename
BASE=$(basename -s .asm $filename)
if [ -f "$filename" ]; then
    scp $filename uwindsor:~/Desktop/easy-masm/src/
    ssh -Y uwindsor<<EOF
        cd Desktop/easy-masm/ 
        script output >/dev/null
        ./run.sh $BASE
        exit >/dev/null
        cat output
EOF
else 
    echo "$filename" does not exist.
fi 
