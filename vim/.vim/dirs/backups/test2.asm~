; Description: A program that generates and displays 20 random strings, each consisting of 
; 10 capital letters from A to Z

INCLUDE Irvine32.inc
INCLUDELIB Irvine32.lib

; these two files are only necessary if you're not using Visual Studio
INCLUDELIB kernel32.lib
INCLUDELIB user32.lib

.data

	; data declarations go here
    array BYTE 10 DUP(?)
    count DWORD ?

.code
main PROC
	
	; code goes here
    mov esi, offset array ; dont add here
    mov ecx, 20
    L1:
        ; save ecx counter to stack hint push .... 
        mov ecx, 10
        mov ecx, lengthOf array ; don't use lengthOf use OFFSET
    L2:
        mov eax, 26
        call RandomRange
        add eax, 65
        mov [esi], eax 
        inc esi
        loop L2
        ; you have to move the string to the end hint
        call WriteString 
        ; call new line
        ; pop counter from stack
        loop L1
	exit

main ENDP

;GenerateRandomString PROC USES ecx  
 ;   mov eax, 26
