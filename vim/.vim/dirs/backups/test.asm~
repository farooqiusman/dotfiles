TITLE 

INCLUDE Irvine32.inc
INCLUDELIB Irvine32.lib

; please comment these lines if you are running in Visual Studios, they were needed for linux
INCLUDELIB kernel32.lib
INCLUDELIB user32.lib

CR = 0Dh

LF = 0Ah

.data

stringrandom BYTE "  20 random strings",CR,LF,0

.code

main PROC

mov eax,blue + (orange * 20)

call SetTextColor

call Clrscr ; clear

call Randomize ; reset

; random strings,

mov edx,OFFSET stringrandom ; display

call WriteString

mov ecx,25 ; loop

Loop1: push ecx

call mystrrandom ; display

mov eax,500

call Delay ; pause

pop ecx

Loop Loop1

;display string.

call Crlf

call WaitMsg

; Exit

exit

main ENDP

mystrrandom PROC

; capital letters A-Z

;range 0 to 30.

; loop

mov ecx,15 ; loop

Loop2: mov eax,26

call RandomRange

add eax,65

call WriteChar

Loop Loop2

mov eax,CR

call WriteChar

mov eax,LF

call WriteChar

ret

mystrrandom ENDP

END main
